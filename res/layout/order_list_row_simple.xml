<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:stretchColumns="1,3" >
	
	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="订单号:" />
	
	        <TextView
	            android:id="@+id/order_list_row_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="出租车:" />
	
	        <TextView
	            android:id="@+id/order_list_row_car_number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	
	        
	    </TableRow>
	    
	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:id="@+id/order_list_row_passenger"
	        android:visibility="gone">
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="乘客:" />
	
	        <TextView
	            android:id="@+id/order_list_row_passenger_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	
	        
	    </TableRow>
	<TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="预付车费:" />
	
	        <TextView
	            android:id="@+id/order_list_row_pay"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	
	        
	    </TableRow>
	    <TableRow
	        android:id="@+id/order_list_row_bespeak_phone"
	        android:layout_width="wrap_content"
	        android:visibility="gone"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="联系电话:" />
	
	        <TextView
	            android:id="@+id/order_list_row_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	
	        
	    </TableRow>
	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	             
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="出发地:" />
	
	        <TextView
	            android:id="@+id/order_list_row_from"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	 
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="目的地:" />
	
	                <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/order_list_row_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:text="TextView"
                android:visibility="gone" />
            
			<Button
                android:id="@+id/driver_to_voice_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text=""
                android:background="@anim/play"
                android:focusable="false"
                android:visibility="gone" />

        </LinearLayout>
	 
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:ems="4"
	            android:gravity="right"
	            android:layout_marginRight="5dp"
	            android:textColor="@color/title_text_color"
	            android:text="打车时间:" />
	
	        <TextView
	            android:id="@+id/order_list_row_take_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_span="3"
	            android:text="TextView" />
	
	    </TableRow>
	    
	</TableLayout>

	<TextView
	    android:id="@+id/order_list_row_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center|right"
	    android:layout_marginRight="20dp"
	    android:background="@drawable/cornor"
	    android:text="Large Text" />

</FrameLayout>
