<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="#ffffff"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:context=".Home" >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/passenger_userimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/passenger_avatar" />

            <TextView
                android:id="@+id/passenger_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="XXX "
                android:textSize="16dp"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/passenger_credit_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4.4 5次评价 "
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="5"
                    android:gravity="right"
                    android:text="打车人数："
                    android:textColor="@color/title_text_color" />

                <TextView
                    android:id="@+id/passenger_member_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="5"
                    android:gravity="right"
                    android:text="所在位置："
                    android:textColor="@color/title_text_color" />

                <TextView
                    android:id="@+id/passenger_from_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="5"
                    android:gravity="right"
                    android:text="目的地："
                    android:textColor="@color/title_text_color" />

                <TextView
                    android:id="@+id/passenger_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:visibility="visible" />

                <Button
                    android:id="@+id/passenger_voice_destination"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@anim/play"
                    android:text=""
                    android:textColor="@color/sbutton_color"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="5"
                    android:gravity="right"
                    android:text="距离我有："
                    android:textColor="@color/title_text_color" />

                <TextView
                    android:id="@+id/passenger_distance_from_here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" " />
                            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_text_color"
                android:text=" 米" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="5"
                    android:gravity="right"
                    android:text="预付车费："
                    android:textColor="@color/title_text_color" />

                <TextView
                    android:id="@+id/passenger_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="444 " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/passenger_take_time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:ems="5"
                    android:gravity="right"
                    android:text="打车时间："
                    android:textColor="@color/title_text_color" />

                <TextView
                    android:id="@+id/passenger_take_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ffdfd " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <Button
                    android:id="@+id/passenger_pickup_button"
                    style="android:buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/sbutton"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="接客"
                    android:textColor="@color/sbutton_color" />

                <Button
                    android:id="@+id/passenger_detail_button"
                    style="android:buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sbutton"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="详细"
                    android:textColor="@color/sbutton_color" />

                <TextView
                    android:id="@+id/passenger_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="22121"
                    android:textColor="#666666"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>